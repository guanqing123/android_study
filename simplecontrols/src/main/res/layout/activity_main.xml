<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/to_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/to_view_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to_view_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/to_text_view"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/to_view_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to_view_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/to_view_border"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/to_scroll_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to_scroll_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/to_view_margin"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/to_button_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to_button_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/to_scroll_view"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/to_button_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to_button_click"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/to_button_view"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/to_button_enable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to_button_enable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/to_button_click"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/to_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to_image_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/to_button_enable"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/to_image_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to_image_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/to_image_view"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>