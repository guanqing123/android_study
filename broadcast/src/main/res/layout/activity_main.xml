<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_broad_standard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BroadStandard"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_broad_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BroadOrder"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_broad_static"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BroadStatic"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_broad_minute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BroadMinute"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_broad_network"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BroadNetwork"
                android:textAllCaps="false"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>